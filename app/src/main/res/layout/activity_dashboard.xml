<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    tools:ignore="ContentDescription">

    <com.google.android.material.circularreveal.CircularRevealGridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:scrollbarDefaultDelayBeforeFade="@integer/material_motion_duration_long_1"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:onClick="goToMusicPlayer"
            android:src="@drawable/ic_twotone_library_music_24"
            tools:ignore="UsingOnClickInXml" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_columnWeight="1"
            android:onClick="goToList"
            android:scaleType="fitStart"
            android:src="@drawable/ic_twotone_queue_music_24"
            tools:ignore="UsingOnClickInXml" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_sort_alphabetically" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_sort_alphabetically" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_sort_alphabetically" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_sort_alphabetically" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_sort_alphabetically" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:layout_columnWeight="1"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_sort_alphabetically" />


    </com.google.android.material.circularreveal.CircularRevealGridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>